#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
user_input = gets.strip

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
index = input_to_index(user_input)

move(board, index)
display_board(board)

# More likely to use puts here if you need something to be read by the user.
# Need to define variables here and call to action using methods.
# strip is used to remove spaces from user input. Good to use just in case.
